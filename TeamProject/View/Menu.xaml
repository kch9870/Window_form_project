<Page x:Class="TeamProject.View.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="menu.png"/>
        </Grid.Background>
        <Button x:Name="Korean" Style="{StaticResource MyButton}" Content="메밀꽃 필 무렵" HorizontalAlignment="Left" VerticalAlignment="Top" Width="364" Margin="220,265,0,0" Height="62" FontSize="22" Foreground="#FFFDFF00" BorderBrush="{x:Null}" Background="{x:Null}" Click="Korean_Click"/>
        <Button x:Name="English" Style="{StaticResource MyButton}" Content="The Selfish Giant" HorizontalAlignment="Left" VerticalAlignment="Top" Width="364" Margin="220,209,0,0" Height="52" FontSize="22" Foreground="#FFFDFF00" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalContentAlignment="Left" Click="English_Click"/>
        <Label Content="긴 글   선 택" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="353,55,0,0" FontSize="16" FontWeight="Bold"/>

    </Grid>
</Page>
